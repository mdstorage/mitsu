{% extends 'CatalogCommonBundle:Catalog:06_schemas.html.twig' %}
{% use 'CatalogVolvoBundle::volvo.base.html.twig' %}
{% block breadcrumbs %}
    <a href="{{ path('vin_volvo',parameters) }}">Поиск по номеру кузова ({{ oContainer.getActiveRegion.getRuname }},
        {{ oContainer.getActiveModel.getRuname }}, {{ oContainer.getActiveModification.getRuname }}, {{ oContainer.getActiveComplectation.getRuname }})</a> /
    <a href="{{ path('vin_volvo_groups', parameters) }}">Группа запчастей ({{ oContainer.getActiveGroup.getRuname}})</a>/
    Выбрать схему
{% endblock breadcrumbs %}

{% block subGroup %}
{% endblock subGroup %}


{% block subGroupRuname %}{{ oContainer.getActiveGroup.getSubGroup(parameters['subGroupCode']).getRuname }}{% endblock subGroupRuname %}

{% block schema %}
    {% if schema.getCode is not empty %}
        <div style=" height: 300px; " class="col-sm-4 col-sm-offset-5 col-md-4 col-md-offset-0">
            <a href="{{ path('vin_volvo_schema', parameters|merge({'schemaCode': schema.getCode})) }}">

                <div class="row">
                    ({{ schema.getCode }}) {{ schema.getRuname }}
                </div>


                <div class="row">
                    <img src="{{ asset('bundles/cataloggm/Images/G/'~schema.getOption('IMAGE_NAME')~'.gif') }}" width="200" alt="{{ schema.getRuname }}"/>
                </div>


            </a>
        </div>
    {% endif %}
{% endblock schema %}