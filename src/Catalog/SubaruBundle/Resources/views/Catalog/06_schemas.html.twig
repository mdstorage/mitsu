{% extends 'CatalogCommonBundle:Catalog:06_schemas.html.twig' %}
{% use 'CatalogSubaruBundle::subaru.base.html.twig' %}
{% block breadcrumbs %}
    <a href="{{ path('catalog_subaru') }}">Выбрать регион, модель, модификацию</a> / <a href="{{ path('catalog_subaru_complectations', parameters) }}">Выбрать комплектацию</a> / <a href="{{ path('catalog_subaru_groups', parameters) }}">Выбрать группу запчастей</a> / <a href="{{ path('catalog_subaru_subgroups', parameters) }}">Выбрать подгруппу запчастей</a> / Выбрать схему
{% endblock breadcrumbs %}

{% block subGroupRuname %}{{ oContainer.getActiveGroup.getSubGroup(parameters['subGroupCode']).getRuname }}{% endblock subGroupRuname %}

{% block schema %}
    {% if schema.getCode is not empty %}
            <div class="col-xs-3">
        <a href="{{ path('catalog_subaru_schema', parameters|merge({'schemaCode': schema.getCode})) }}">

                    <div class="row">
                        {{ schema.getRuname }}
                    </div>

                    <div class="row">
                        {{ schema.getOption('sdate')|subaru_date_convertor}} - {{ schema.getOption('edate')|subaru_date_convertor}}
                     </div>

                    <div class="row">
                        <img src="{{ asset('bundles/catalogsubaru/Subaru_Images/'~schema.getOption(constant('Catalog\\CommonBundle\\Components\\Constants::CD'))~'/'~schema.getCode~'.png') }}" width="300" alt="{{ schema.getCode }}" class="highqual">
                    </div>

        </a>
            </div>
    {% endif %}
{% endblock schema %}