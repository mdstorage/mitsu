{% trans_default_domain 'common' %}
{% extends 'CatalogCommonBundle:Catalog:04_groups.html.twig' %}
{% use 'CatalogSubaruBundle::subaru.base.html.twig' %}
{% block breadcrumbs %}
   <a href="{% if  app.request.get('token') %} {{ path('catalog_subaru_token', parameters) }} {% else %} {{ path('catalog_subaru') }} {% endif %}">{{'Регион, модель, модификация'|trans}}</a> / <a href="{{ path('catalog_subaru_complectations', parameters) }}">{{'Комплектация'|trans}}</a> / {{'Группа запчастей'|trans}}
{% endblock breadcrumbs %}



{% block pathToSubgroup %}{{ path('catalog_subaru_subgroups', parameters|merge({'groupCode': group.getCode})) }}{% endblock pathToSubgroup %}

{% block body %}
   {% block head %}<h3>{{'Выбрать группу запчастей'|trans}}:</h3>{% endblock head %}
   <div class="row">
      <div class="col-lg-12">
         {% block groups %}
            <div class="groups">
               {% for group in oContainer.getGroups %}

                  <div class="col-sm-10 col-sm-offset-5 col-md-10 col-md-offset-0">

                     <a href="{{ path('catalog_subaru_subgroups', parameters|merge({'groupCode': group.getCode})) }}">
                        <div class="row">

                           ({{ group.getCode }}) {{ group.getRuname(app.request.get('_locale')) }}

                        </div>

                     </a>

                  </div>
               {% endfor %}
            </div>
         {% endblock groups %}
      </div>
   </div>
{% endblock body %}