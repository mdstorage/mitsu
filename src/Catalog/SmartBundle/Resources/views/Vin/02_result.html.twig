{% extends 'CatalogCommonBundle:Vin:02_result.html.twig' %}
{% block specification %}
    <div class="row">
        <div class="col-lg-8">
            <table class="table table-bordered">
                <tr>
                    <td>Марка:</td>
                    <td>{{ result.marka }}</td>
                </tr>
                <tr>
                    <td>Регион:</td>
                    <td>{{ result.region_RU }}</td>
                </tr>
                {#<tr>#}
                    {#<td>Страна:</td>#}
                    {#<td>{{ result.country }}</td>#}
                {#</tr>#}
                <tr>
                    <td>Модель:</td>
                    <td>{{ result.saledes }}</td>
                </tr>
                <tr>
                    <td>Модельный год:</td>
                    <td>{{ result.prod_year|date_convertor }}</td>
                </tr>
                <tr>
                    <td>Модификация:</td>
                    <td>{{ result.modification }}</td>
                </tr>
                <tr>
                    <td>Комплектация:</td>
                    <td>{{ result.complectation }}</td>
                </tr>
                {#<tr>#}
                    {#<td>Цвет экстерьера:</td>#}
                    {#<td>{{ result.ext_color }}</td>#}
                {#</tr>#}
                {#<tr>#}
                    {#<td>Цвет интерьера:</td>#}
                    {#<td>{{ result.int_color }}</td>#}
                {#</tr>#}
                <tr>
                    <td>Дата выпуска:</td>
                    <td>{{ result[constant('Catalog\\CommonBundle\\Components\\Constants::PROD_DATE')]|date_convertor }}</td>
                </tr>
            </table>
        </div>
    </div>
{% endblock specification %}
{% block catalogPath %}
    {{ path('vin_smart_groups', {
        'regionCode': result.region,
        'modelCode': result.model,
        'modificationCode': result.modification,
        'complectationCode': result.complectation,
        'token': app.request.get('token')

    }) }}
{% endblock catalogPath %}