{% extends 'CatalogCommonBundle:Catalog:06_schemas.html.twig' %}
{% use 'CatalogSmartBundle::smart.base.html.twig' %}
{% block breadcrumbs %}
    <a href="{{ path('articul_smart', parameters) }}">Выбрать регион, модель, модификацию</a> /
    <a href="{{ path('articul_smart_complectations', parameters) }}">Выбрать комплектацию</a> /
    <a href="{{ path('articul_smart_groups', parameters) }}">Выбрать группу запчастей</a> /
    <a href="{{ path('articul_smart_subgroups', parameters) }}">Выбрать подгруппу запчастей</a> /
    Выбрать схему
{% endblock breadcrumbs %}
{% block subGroup %}<b>Подгруппа запчастей:</b> {{ oContainer.getActiveGroup.getSubGroup(parameters['sanum']).getRuname }}{% endblock subGroup %}
{% block schema %}
    {% if schema.getCode is not empty %}
            <div class="col-xs-3">
        <a href="{{ path('articul_smart_saschema', parameters|merge({'schemaCode': schema.getCode, 'subGroupCode': parameters['sanum']})) }}">

                    <div class="row">
                        {{ schema.getRuname }}
                    </div>
                    <div class="row">
                        <img src="{{ asset('bundles/catalogsmart/images/SA_IMAGES/'~schema.getCode~'.png')|file_exists() ? asset('bundles/catalogsmart/images/SA_IMAGES/'~schema.getCode~'.png') : asset('bundles/catalogsmart/images/SA_IMAGES_ARC/'~schema.getCode~'.png') }}" width="300" alt="{{ schema.getRuname }}"/>
                    </div>

        </a>

            </div>
    {% endif %}
{% endblock schema %}