{% extends 'CatalogCommonBundle:Catalog:03_complectations.html.twig' %}
{% use 'CatalogSmartBundle::smart.base.html.twig' %}

{% block breadcrumbs %}
    <a href="{% if  app.request.get('token') %} {{ path('articul_smart_find_token', parameters) }} {% else %} {{ path('articul_smart_find') }} {% endif %}">Выбрать регион, модель, модификацию</a> /
    Выбрать комплектацию
{% endblock breadcrumbs %}

{% set complectationsListLenght = oContainer.getActiveModification.getComplectations|length %}
{% block complectations %}
    <div class="complectations">
            <table class="table table-responsive">
                {% for complectation in oContainer.getActiveModification.getComplectations %}
                    <tr>
                        <td>
                            <a href="{{ path('articul_smart_groups', parameters|merge({ 'complectationCode': complectation.getCode })) }}">{{ complectation.getCode|slice(4) }}</a>
                        </td>
                        <td>
                            <a href="{{ path('articul_smart_groups', parameters|merge({ 'complectationCode': complectation.getCode })) }}">{{ complectation.getRuname }}</a>
                        </td>
                        <td>{{ complectation.getOption('REMARKS') }}</td>
                    </tr>

                {% endfor %}
            </table>
    </div>
{% endblock complectations %}