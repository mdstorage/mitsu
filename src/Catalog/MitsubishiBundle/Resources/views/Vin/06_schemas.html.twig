{% extends 'CatalogCommonBundle:Catalog:06_schemas.html.twig' %}
{% use 'CatalogMitsubishiBundle::mitsubishi.base.html.twig' %}
{% block breadcrumbs %}
    <a href="{{ path('vin_mitsubishi') }}">Поиск по номеру кузова ({{ oContainer.getActiveRegion.getRuname }},
        {{ oContainer.getActiveModel.getRuname }}, {{ oContainer.getActiveModification.getRuname }}, {{ oContainer.getActiveComplectation.getRuname }})</a> /
    <a href="{{ path('vin_mitsubishi_groups', parameters) }}">Группа запчастей ({{ oContainer.getActiveGroup.getRuname}})</a>/
    Выбрать схему
{% endblock breadcrumbs %}

{% block subGroup %}
{% endblock subGroup %}


{% block subGroupRuname %}{{ oContainer.getActiveGroup.getSubGroup(parameters['subGroupCode']).getRuname }}{% endblock subGroupRuname %}

{% block schema %}
    {% if schema.getCode is not empty %}
        <div style=" height: 300px; " class="col-sm-4 col-sm-offset-5 col-md-4 col-md-offset-0">
            <a href="{{ path('vin_mitsubishi_schema', parameters|merge({'schemaCode': schema.getCode})) }}">

                <div class="row">
                    Схема {{ loop.index }} из {{ loop.length }}
                </div>


                <div class="row">
                    <img src="{{ asset('bundles/catalogmitsubishi/images/'~oContainer.getActiveRegion.getCode~'/'~schema.getCode~'.png') }}" width="300" alt="{{ schema.getRuname }}"/>
                </div>


            </a>
        </div>
    {% endif %}
{% endblock schema %}