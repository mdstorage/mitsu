{% extends 'CatalogMitsubishiBundle:Default:main_groups_list.html.twig' %}
{% block summary %}
    {{ parent() }}<br/><br/>
    <b>Группа запчастей</b>: {{ (app.request.cookies.get('mgroups')|json_decode)[mainGroup] }} ({{ mainGroup }})
{% endblock summary %}
{% block body %}
<h3>Выбрать подгруппу запчастей:</h3>
    <div class="row">
        {% for data in sgroups %}
            <div class="col-xs-3">
                <a href="{{ path('catalog_mitsubishi_bgroups_list', {'catalog': catalog,  'model': model, 'catalogNum': catalogNum, 'classification': classification, 'mainGroup': mainGroup, 'subGroup': data.subGroup}) }}">
                    <div>
                        {{ data.descEn }} ({{ data.subGroup }})
                    </div>
                    <img src="{{ asset('bundles/catalogmitsubishi/images/'~catalog~'/'~data.illustration~'.png') }}" />
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock body %}