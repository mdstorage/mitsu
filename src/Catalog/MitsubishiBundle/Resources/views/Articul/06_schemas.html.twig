{% extends 'CatalogCommonBundle:Catalog:06_schemas.html.twig' %}
{% use 'CatalogMitsubishiBundle::mitsubishi.base.html.twig' %}
{% block breadcrumbs %}
    <a href="{% if  app.request.get('token') %} {{ path('articul_mitsubishi_find_token', parameters) }} {% else %} {{ path('articul_mitsubishi_find') }} {% endif %}"> Регион, модель, модификация ({{ oContainer.getActiveRegion.getRuname }},
        {{ oContainer.getActiveModel.getRuname }}, {{ oContainer.getActiveModification.getRuname }})</a> /
    <a href="{{ path('articul_mitsubishi_complectations', parameters) }}"> Комплектация ({{ oContainer.getActiveComplectation.getRuname }})</a> /
    <a href="{{ path('articul_mitsubishi_groups', parameters) }}"> Группа запчастей ({{ oContainer.getActiveGroup.getRuname}})</a> /
    Подгруппа запчастей
    Выбрать схему
{% endblock breadcrumbs %}

{% block subGroupRuname %}{{ oContainer.getActiveGroup.getSubGroup(parameters['subGroupCode']).getRuname }}{% endblock subGroupRuname %}

{% block subGroup %}
{% endblock subGroup %}

{% block schema %}
    {% if schema.getCode is not empty %}
        <div style=" height: 300px; " class="col-sm-4 col-sm-offset-5 col-md-4 col-md-offset-0">
            <a href="{{ path('articul_mitsubishi_schema', parameters|merge({'schemaCode': schema.getCode})) }}">

                <div class="row">
                    Схема {{ loop.index }} из {{ loop.length }}
                </div>


                <div class="row">
                    <img src="{{ asset('bundles/catalogmitsubishi/images/'~oContainer.getActiveRegion.getCode~'/'~schema.getCode~'.png') }}" width="300" alt="{{ schema.getRuname }}"/>
                </div>


            </a>
        </div>
    {% endif %}
{% endblock schema %}