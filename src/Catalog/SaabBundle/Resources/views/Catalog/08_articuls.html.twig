<table class="table small">
    {% if oContainer.getActivePnc.getArticuls %}
    <thead>
        <tr>
            <th>Артикул</th>
            <th>Наименование</th>
            <th>Кол-во</th>
            <th>Период</th>
            <th>Доп.информация</th>
        </tr>
    </thead>

    <tbody>
    {% for articul in oContainer.getActivePnc.getArticuls %}
        <tr>
            <td><a href="{{ parameters.redirectAdress|replace({ '{article}': articul.getOption('articul') }) }}" target="_blank">{% block articulItem %}{{ articul.getOption('articul') }}{% endblock articulItem %}</a>
            <br/>
                {% if articul.getOption('replace') %} Замена: {{ articul.getOption('replace')}} {% endif %}
            </td>
            <td>{{ articul.getRuname }}</td>
            <td>{{ articul.getOption(constant('Catalog\\CommonBundle\\Components\\Constants::QUANTITY')) }}</td>
            <td>{{ articul.getOption(constant('Catalog\\CommonBundle\\Components\\Constants::START_DATE'))}} - {{ articul.getOption(constant('Catalog\\CommonBundle\\Components\\Constants::END_DATE'))}}</td>
            <td>{% if articul.getOption('dopinf') %}{{ articul.getOption('dopinf')}} {% endif %}</td>
            
        </tr>
    {% endfor %}
    </tbody>
    {% endif %}
    {% if not oContainer.getActivePnc.getArticuls %}
        <tbody>
    Запчасть не применяется в выбранной комплектации
    </tbody>
    {% endif %}

</table>