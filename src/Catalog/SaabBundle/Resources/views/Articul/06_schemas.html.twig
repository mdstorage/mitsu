{% extends 'CatalogCommonBundle:Catalog:06_schemas.html.twig' %}
{% use 'CatalogSaabBundle::saab.base.html.twig' %}
{% block breadcrumbs %}
    <a href="{{ path('articul_saab_find') }}">Выбрать регион, модель, модификацию</a> / <a href="{{ path('articul_saab_groups', parameters) }}">Выбрать группу запчастей</a> / <a href="{{ path('articul_saab_subgroups', parameters) }}">Выбрать подгруппу запчастей</a> / Выбрать схему
{% endblock breadcrumbs %}
{% block complectation %}
{% endblock complectation %}


{% block schema %}
    {% if schema.getCode is not empty %}
        <div style=" height: 550px; " class="col-xs-3">
            <a href="{{ path('articul_saab_schema', parameters|merge({'schemaCode': schema.getCode})) }}">

                <div class="row">
                    {{ schema.getRuname }}
                    </br>
                    {% if schema.getOption('option1') %}
                        Дополнительная информация: {{ schema.getOption('option1') }}
                    {% endif %}
                </div>

                <div class="row">
                    <img src="{{ asset('bundles/catalogsaab/Pictures/'~schema.getCode~'.png') }}" width="300" alt="{{ schema.getRuname }}"/>
                </div>


            </a>
        </div>
    {% endif %}
{% endblock schema %}