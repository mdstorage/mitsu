{% extends 'CatalogCommonBundle:Catalog:04_groups.html.twig' %}
{% use 'CatalogBmwMotoBundle::bmwmoto.base.html.twig' %}
{% block breadcrumbs %}
    <a href="{% if  app.request.get('token') %} {{ path('articul_bmw_find_token', parameters) }} {% else %} {{ path('articul_bmw_find') }} {% endif %}">Регион, модель, модификация ({{ oContainer.getActiveRegion.getRuname }},
   {{ oContainer.getActiveModel.getRuname }}, {{ oContainer.getActiveModification.getRuname }})</a>  /
    <a href="{{ path('articul_bmwmoto_complectations', parameters) }}">Комплектация ({{ oContainer.getActiveComplectation.getRuname}})</a> /Группа запчастей
{% endblock breadcrumbs %}


{% block body %}
    {% block head %}<h3>Выбрать группу запчастей:</h3>{% endblock head %}
    <div class="row">
        <div class="col-lg-10 col-sm-10 col-md-10">
        {% block groups %}
            <div class="groups">
                {% for group in oContainer.getGroups %}
                    <div style=" height: 250px; " class="col-sm-2 col-sm-offset-5 col-md-2 col-md-offset-0">

                        <a href="{{ path('articul_bmwmoto_subgroups', parameters|merge({'groupCode': group.getCode})) }}">

                            <img src="{{ asset(constant('Catalog\\CommonBundle\\Components\\Constants::PREFIX_STATIC')~'/bundles/catalogbmw/grafik/w_grafik/'~group.getOption('Id')) }}" width="100%" alt="{{ group.getRuname }}"/>
                            {{ group.getRuname }}

                        </a>

                    </div>
                {% endfor %}
            </div>
        {% endblock groups %}
        </div>
    </div>
{% endblock body %}