{% extends 'CatalogCommonBundle:Catalog:06_schemas.html.twig' %}
{% use 'CatalogMercedesBundle::mercedes.base.html.twig' %}
{% block breadcrumbs %}
    <a href="{% if  app.request.get('token') %} {{ path('catalog_mercedes_token', parameters) }} {% else %} {{ path('catalog_mercedes') }} {% endif %}">Выбрать регион, модель, модификацию</a> /
    <a href="{{ path('catalog_mercedes_complectations', parameters) }}">Выбрать комплектацию</a> /
    <a href="{{ path('catalog_mercedes_groups', parameters) }}">Выбрать группу запчастей</a> /
    <a href="{{ path('catalog_mercedes_subgroups', parameters) }}">Выбрать подгруппу запчастей</a> /
    Выбрать схему
{% endblock breadcrumbs %}

{% block schema %}
    {% if schema.getCode is not empty %}
        <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12">
        <a href="{{ path('catalog_mercedes_schema', parameters|merge({'schemaCode': schema.getCode})) }}" class="thumbnail">

                    <div class="row">
                        {{ schema.getRuname }}{{ (constant('Catalog\\CommonBundle\\Components\\Constants::PREFIX_STATIC')~'/bundles/catalogmercedes/images/BM_IMAGES/'~schema.getCode~'.png')|file_exists() }}
                    </div>
                    {#<div class="row">#}
                        <img src="{{ (constant('Catalog\\CommonBundle\\Components\\Constants::PREFIX_STATIC')~'/bundles/catalogmercedes/images/BM_IMAGES/'~schema.getCode~'.png')|file_exists() ? asset(constant('Catalog\\CommonBundle\\Components\\Constants::PREFIX_STATIC')~'/bundles/catalogmercedes/images/BM_IMAGES/'~schema.getCode~'.png') : asset(constant('Catalog\\CommonBundle\\Components\\Constants::PREFIX_STATIC')~'/bundles/catalogmercedes/images/BM_IMAGES_ARC/'~schema.getCode~'.png') }}" width="inherit" alt="{{ schema.getRuname }}"/>
            {#</div>#}

        </a>
            </div>
    {% endif %}
{% endblock schema %}