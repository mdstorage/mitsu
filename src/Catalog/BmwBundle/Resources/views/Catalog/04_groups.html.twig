{% trans_default_domain "common" %}
{% extends 'CatalogCommonBundle:Catalog:04_groups.html.twig' %}
{% use 'CatalogBmwBundle::bmw.base.html.twig' %}
{% block breadcrumbs %}
<a href="{% if  app.request.get('token') %} {{ path('catalog_bmw_token', parameters) }} {% else %} {{ path('catalog_bmw') }} {% endif %}">{{ 'Регион, модель, модификация'|trans }}
    ({{ oContainer.getActiveRegion.getRuname }}, {{ oContainer.getActiveModel.getRuname }}, {{ oContainer.getActiveModification.getRuname }})</a>
     / <a href="{{ path('catalog_bmw_complectations', parameters) }}">{{ 'Комплектация'|trans }} ({{ oContainer.getActiveComplectation.getRuname}})</a> /{{ 'Группа запчастей'|trans }}
{% endblock breadcrumbs %}

{% block body %}
    {% block head %}<h3>{{ 'Выбрать группу запчастей'|trans }}:</h3>{% endblock head %}
    <div class="row">
    <div class="col-sm-12 col-md-12 col-xs-12 col-lg-12">

        {% block groups %}
            <div class="groups">
                {% for group in oContainer.getGroups %}

                    <div style=" height: 250px; " class="col-lg-2 col-md-3 col-sm-6 col-xs-6">

                        <a href="{{ path('catalog_bmw_schemas', parameters|merge({'groupCode': group.getCode})) }}" class="thumbnail">

                            <div class="row">
                            <img src="{{ asset(constant('Catalog\\CommonBundle\\Components\\Constants::PREFIX_STATIC')~'/bundles/catalogbmw/grafik/w_grafik/'~group.getOption('Id')) }}" width="60%" alt="{{ group.getRuname }}"/>
                            </div>

                            <div class="row">
                            {{ group.getRuname }}
                            </div>

                        </a>

                    </div>

                {% endfor %}

            </div>
        {% endblock groups %}
    </div>
    </div>
{% endblock body %}
