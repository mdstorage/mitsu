{% extends 'CatalogCommonBundle:Catalog:04_groups.html.twig' %}
{% use 'CatalogBmwBundle::bmw.base.html.twig' %}
{% block breadcrumbs %}
<a href="{% if  app.request.get('token') %} {{ path('catalog_bmw_token', parameters) }} {% else %} {{ path('catalog_bmw') }} {% endif %}">{{ trans('Регион, модель, модификация', app.request.get('_locale')) }}
    ({{ oContainer.getActiveRegion.getRuname }}, {{ oContainer.getActiveModel.getRuname }}, {{ oContainer.getActiveModification.getRuname }})</a>
     / <a href="{{ path('catalog_bmw_complectations', parameters) }}">{{ trans('Комплектация', app.request.get('_locale')) }} ({{ oContainer.getActiveComplectation.getRuname}})</a> /{{ trans('Группа запчастей', app.request.get('_locale')) }}
{% endblock breadcrumbs %}

{% block body %}
    {% block head %}<h3>{{ trans('Выбрать группу запчастей', app.request.get('_locale')) }}:</h3>{% endblock head %}
    <div class="row">
    <div class="col-md-10">

        {% block groups %}
            <div class="groups">
                {% for group in oContainer.getGroups %}







                    <div style=" height: 250px; " class="col-sm-2 col-sm-offset-5 col-md-2 col-md-offset-0">

                        <a href="{{ path('catalog_bmw_subgroups', parameters|merge({'groupCode': group.getCode})) }}">

                            <img src="{{ asset('bundles/catalogbmw/grafik/w_grafik/'~group.getOption('Id')) }}" width="100%" alt="{{ group.getRuname }}"/>
                            {{ group.getRuname }}

                        </a>

                    </div>



                {% endfor %}

            </div>
        {% endblock groups %}
    </div>
    </div>
{% endblock body %}
