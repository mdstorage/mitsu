<div class="modifications">
<div class="row">
    {% for modification in oContainer.getActiveModel.getModifications %}
         <div class = "col-lg-4 col-xs-4 col-md-6 col-sm-6">
            {% block modification %}

                <a href="{{ path('catalog_bmw_complectations', parameters|merge({'modificationCode': modification.getCode})) }}">

                    {{ modification.getRuname }}
                </a>

            {% endblock modification %}
        </div>
    {% endfor %}
</div>
</div>
