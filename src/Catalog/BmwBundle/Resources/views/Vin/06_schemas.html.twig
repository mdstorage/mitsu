{% trans_default_domain 'common' %}
{% extends 'CatalogCommonBundle:Catalog:06_schemas.html.twig' %}
{% use 'CatalogBmwBundle::bmw.base.html.twig' %}
{% block breadcrumbs %}
    <a href="{{ path('vin_bmw',parameters) }}">{{ 'Поиск по номеру кузова'|trans }} ({{ oContainer.getActiveRegion.getRuname }},
        {{ oContainer.getActiveModel.getRuname }}, {{ oContainer.getActiveModification.getRuname }}, {{ oContainer.getActiveComplectation.getRuname}})</a> /
    <a href="{{ path('vin_bmw_groups', parameters) }}">{{ 'Группа запчастей'|trans }} ({{ oContainer.getActiveGroup.getRuname}})</a>/
    {{ 'Выбрать схему'|trans }}
{% endblock breadcrumbs %}


{% block subGroup %}{% endblock subGroup %}

{% block schema %}
    {% if schema.getCode is not empty %}
        <div class="col-xs-3">
            <a href="{{ path('vin_bmw_schema', parameters|merge({'schemaCode': schema.getCode})) }}">

                <div class="row">
                    {{ schema.getRuname }}
                </div>

                <div class="row">
                    <img src="{{ asset('bundles/catalogbmw/grafik/w_grafik/'~schema.getCode)  }}" width="300" alt="{{ schema.getRuname }}"/>
                </div>


            </a>
        </div>
    {% endif %}
{% endblock schema %}