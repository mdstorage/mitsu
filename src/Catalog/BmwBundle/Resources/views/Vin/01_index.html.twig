{% extends 'CatalogCommonBundle:Vin:01_index.html.twig' %}
{% use 'CatalogBmwBundle::bmw.base.html.twig' %}

{% block vinScript %}
    <script>
        $("#vin-button").on('click', function(){
            if(($("#vin").val(). replace(/\s+/g, '').length !== 17) && ($("#vin").val(). replace(/\s+/g, '').length !== 7)){
                alert("VIN должен состоять из 17 или 7 последних знаков!");
                return;
            }
            $("#vin-result").html('<img src={{ asset("bundles/catalogcommon/images/loading.gif") }} height="20px" />');
            $.ajax({
                type:   'POST',
                async:  false,
                url:    "{% block vinAjaxPath %}{{ path('vin_bmw_result') }}{% endblock vinAjaxPath %}",
                data:   { vin: $("#vin").val(). replace(/\s+/g, '')},
                success: function(data) {
                    $("#vin-result").html(data);
                }
            });
        });
    </script>
{% endblock vinScript %}