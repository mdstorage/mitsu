<div class="modifications">
    <div class="row">
        {% for modification in oContainer.getActiveModel.getModifications %}
            <div class = "col-lg-4 col-xs-4 col-md-2 col-sm-2">
                {% block modification %}

                    <a href="{{ path('articul_bmw_complectations', parameters|merge({'modificationCode': modification.getCode, 'articul': app.request.get('articul')})) }}">

                        {{ modification.getRuname }}
                    </a>

                {% endblock modification %}
            </div>
        {% endfor %}
    </div>
</div>
