{% extends 'CatalogCommonBundle:Catalog:04_groups.html.twig' %}
{% use 'CatalogBmvBundle::bmv.base.html.twig' %}
{% block breadcrumbs %}
   <a href="{{ path('vin_bmv') }}">Поиск по номеру кузова ({{ oContainer.getActiveRegion.getRuname }}, 
   {{ oContainer.getActiveModel.getRuname }}, {{ oContainer.getActiveModification.getRuname }})</a>
    / Группа запчастей
{% endblock breadcrumbs %}
{% block complectation %}
{% endblock complectation %}

{% block body %}
    {% block head %}<h3>Выбрать группу запчастей:</h3>{% endblock head %}
    <div class="row">
    <div class="col-lg-12">
        {% block groups %}
            <div class="groups">
                {% for group in oContainer.getGroups %}
                    <div class="col-lg-2">
                        <a href="{{ path('vin_bmv_subgroups', parameters|merge({'groupCode': group.getCode})) }}">
                            <img src="{{ asset('bundles/catalogbmw/grafik/w_grafik/'~group.getOption('Id')) }}" width="100%" alt="{{ group.getRuname }}"/><br/>
                            {{ group.getRuname }}
                    </div>
                {% endfor %}
            </div>
        {% endblock groups %}
    </div>
    </div>
{% endblock body %}