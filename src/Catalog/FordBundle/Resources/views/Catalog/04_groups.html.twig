{% trans_default_domain 'common' %}
{% extends 'CatalogCommonBundle:Catalog:04_groups.html.twig' %}
{% use 'CatalogFordBundle::ford.base.html.twig' %}
{% block breadcrumbs %}
    <a href="{% if  app.request.get('token') %} {{ path('catalog_ford_token', parameters) }} {% else %} {{ path('catalog_ford') }} {% endif %}">{{'Регион, модель, модификация'|trans}} ({{ oContainer.getActiveRegion.getRuname }},
        {{ oContainer.getActiveModel.getRuname }}, {{ oContainer.getActiveModification.getRuname }})</a>
    / <a href="{{ path('catalog_ford_complectations', parameters) }}">{{'Комплектация'|trans}}</a>
    / {{'Группа запчастей'|trans}}
{% endblock breadcrumbs %}

{% block complectationRuname %}{% endblock complectationRuname %}


{% block body %}
    {% block head %}<h3>{{'Выбрать группу запчастей'|trans}}:</h3>{% endblock head %}
    <div class="row">
        <div class="col-lg-12">
            {% block groups %}
                <div class="groups">
                    {% for group in oContainer.getGroups %}

                        <div class="col-sm-10 col-sm-offset-5 col-md-10 col-md-offset-0">

                            <a href="{{ path('catalog_ford_subgroups', parameters|merge({'groupCode': group.getCode})) }}">
                                <div class="row">

                                    ({{ group.getCode }}) {{ group.getRuname|trans({}, 'ford')|upper }}

                                </div>

                            </a>

                        </div>
                    {% endfor %}
                </div>
            {% endblock groups %}
        </div>
    </div>
{% endblock body %}
