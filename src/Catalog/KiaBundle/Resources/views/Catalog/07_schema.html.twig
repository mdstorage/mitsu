        <div class="row" style="height: 600px;">
            <div class="guayaquil_unit_icons">
                <div class="guayaquil_zoom cboxElement" title="Схема: {{ oContainer.getActiveSchema.getCode }}" full="{{ (constant('Catalog\\CommonBundle\\Components\\Constants::PREFIX_STATIC')~'/bundles/catalogkia/Imgs/Cats/'~oContainer.getActiveModification.getOption('option1')~'/'~oContainer.getActiveSchema.getCode~'.png')|file_exists() ?
