                    <img src="{{ asset(constant('Catalog\\CommonBundle\\Components\\Constants::PREFIX_STATIC')~'/bundles/catalogcommon/images/move.png') }}"/>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
