{% extends 'CatalogCommonBundle:Catalog:01_regions_models.html.twig' %}
{% use 'CatalogAudiBundle::audi.base.html.twig' %}
{% block regionPath %}
    {% if app.request.get('token') %}
        {{ path('catalog_audi_token', {'token': app.request.get('token'), 'regionCode': region.getCode, 'callbackhost': app.request.get('callbackhost')}) }}

    {% else %}

        {{ path('catalog_audi', {'regionCode': region.getCode, 'callbackhost': app.request.get('callbackhost')}) }}

    {% endif %}

{% endblock regionPath %}

{% block modificationScript %}

    <script>
        set_cookie("COOKIEHOST", "{{ app.request.get('callbackhost') }}");

        function set_cookie( name, value, exp_y, exp_m, exp_d, path, domain, secure )
        {
            var cookie_string = name + "=" + escape ( value );

            if ( exp_y )
            {
                var expires = new Date ( exp_y, exp_m, exp_d );
                cookie_string += "; expires=" + expires.toGMTString();
            }

            if ( path )
                cookie_string += "; path=" + escape ( path );

            if ( domain )
                cookie_string += "; domain=" + escape ( domain );

            if ( secure )
                cookie_string += "; secure";

            document.cookie = cookie_string;
        }
        $("#{{ modelCode }}").on("click", function(){
            $("#modifications_for_model{{ modelCode }}").toggleClass("hidden");
            $(this).toggleClass("glyphicon-plus");
            $.ajax({
                type:   'POST',
                async:  false,
                url:    "{% block ajaxUrl %}{{ path('catalog_audi_modifications') }}{% endblock ajaxUrl %}",
                data:   {
                    regionCode: $(this).attr('regionCode'),
                    modelCode: "{{ model.getCode }}",
                    token: "{{ app.request.get('token') }}",
                    callbackhost: "{{ app.request.get('callbackhost') }}"
                },
                success: function(data) {
                    $("#modifications_for_model{{ modelCode }}").html(data);
                }
            });
            $(this).toggleClass("glyphicon-minus");
        });
        $("#{{ modelCode }}").on("mouseover", function(){
            $(this).css("cursor", "pointer");
            $(this).addClass("btn-info");
        });
        $("#{{ modelCode }}").on("mouseout", function(){
            $(this).removeClass("btn-info");
        });
    </script>
{% endblock modificationScript %}