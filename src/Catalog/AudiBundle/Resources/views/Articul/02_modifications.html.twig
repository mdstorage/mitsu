<div class="modifications">
    <div class="row">
        {% for modification in oContainer.getActiveModel.getModifications %}
            <div>
                {% block modification %}
                <div class="col-xs-2">

                    <a href="{{ path('articul_audi_groups', parameters|merge({'modificationCode': modification.getCode, 'articul': app.request.get('articul') })) }}">
                        {{ modification.getRuname }}
                    </a>
                </div>
                {% endblock modification %}
            </div>
        {% endfor %}
    </div>
</div>
