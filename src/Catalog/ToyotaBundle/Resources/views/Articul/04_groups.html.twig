{% trans_default_domain 'common' %}
{% extends 'CatalogCommonBundle:Catalog:04_groups.html.twig' %}
{% use 'CatalogToyotaBundle::toyota.base.html.twig' %}
{% block breadcrumbs %}
    <a href="{% if  app.request.get('token') %} {{ path('articul_toyota_find_token', parameters) }} {% else %} {{ path('articul_toyota_find') }} {% endif %}">{{'Регион, модель, модификация'|trans}} ({{ oContainer.getActiveRegion.getRuname }},
   {{ oContainer.getActiveModel.getRuname }}, {{ oContainer.getActiveModification.getRuname }})</a>
    / <a href="{{ path('articul_toyota_complectations', parameters) }}">{{'Комплектация'|trans}} ({{ oContainer.getActiveComplectation.getRuname}})</a>
    / {{'Группа запчастей'|trans}}
{% endblock breadcrumbs %}



{% block body %}
    {% block head %}<h3>{{'Выбрать группу запчастей'|trans}}:</h3>{% endblock head %}
    <div class="row">
    <div class="col-lg-12">
        {% block groups %}
            <div class="groups">
                {% for group in oContainer.getGroups %}



                    <a href="{{ path('articul_toyota_subgroups', parameters|merge({'groupCode': group.getCode, 'articul': app.request.get('articul')})) }}">
                        <div class="row">

                            ({{ group.getCode }}) {{ group.getRuname|trans({}, 'toyota') }}

                        </div>


                    </a>


                {% endfor %}
            </div>
        {% endblock groups %}
    </div>
    </div>
{% endblock body %}