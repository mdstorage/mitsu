{% extends 'CatalogCommonBundle:Catalog:06_schemas.html.twig' %}
{% use 'CatalogToyotaBundle::toyota.base.html.twig' %}
{% block breadcrumbs %}
    <a href="{{ path('vin_toyota') }}">Поиск по номеру кузова</a> /
    <a href="{{ path('vin_toyota_groups', parameters) }}">Группа запчастей ({{ oContainer.getActiveGroup.getRuname}})</a>/
    <a href="{{ path('vin_toyota_subgroups', parameters) }}">Подгруппа запчастей ({{ oContainer.getActiveGroup.getSubGroup(parameters.subGroupCode).getRuname }})</a> / Выбрать схему
{% endblock breadcrumbs %}


{% set a = 'SECIMG' %}
{% if oContainer.getActiveRegion.getCode != "JP"  %}
    {% set a = 'SECIMG' %}
{% endif %}

{% block subGroupRuname %}{{ oContainer.getActiveGroup.getSubGroup(parameters['subGroupCode']).getRuname }}{% endblock subGroupRuname %}

{% block schema %}
    {% if schema.getCode is not empty %}
        <div style=" height: 300px; " class="col-sm-4 col-sm-offset-5 col-md-4 col-md-offset-0">
            <a href="{{ path('vin_toyota_schema', parameters|merge({'schemaCode': schema.getCode})) }}">


                <div class="row">
                    {{ schema.getOption('FROMDATE')|toyota_date_convertor }} - {{ schema.getOption('UPTODATE')|toyota_date_convertor }}
                </div>

                <div class="row">
                    {{ schema.getRuname }}
                </div>



                <div class="row">
                    <img src="{{ asset('bundles/catalogtoyota/Img/'~oContainer.getActiveRegion.getCode~'/'~oContainer.getActiveComplectation.getCode|slice(0,3)~'/'~a~'/'~schema.getCode~'.gif') }}" width="300" alt="{{ schema.getRuname }}"/>
                </div>


            </a>
        </div>
    {% endif %}
{% endblock schema %}