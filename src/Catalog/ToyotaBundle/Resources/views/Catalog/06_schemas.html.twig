{% trans_default_domain 'common' %}
{% extends 'CatalogCommonBundle:Catalog:06_schemas.html.twig' %}
{% use 'CatalogToyotaBundle::toyota.base.html.twig' %}
{% block breadcrumbs %}{% set loc = app.request.get('_locale')~'_'~app.request.get('_locale')|upper %}
    <a href="{% if  app.request.get('token') %} {{ path('catalog_toyota_token', parameters) }} {% else %} {{ path('catalog_toyota') }} {% endif %}">{{ 'Регион, модель, модификация'|trans }} ({{ oContainer.getActiveRegion.getRuname }},
        {{ oContainer.getActiveModel.getRuname }}, {{ oContainer.getActiveModification.getRuname }})</a> /
    <a href="{{ path('catalog_toyota_complectations', parameters) }}">{{'Комплектация'|trans}} ({{ oContainer.getActiveComplectation.getRuname}})</a>/
    <a href="{{ path('catalog_toyota_groups', parameters) }}">{{'Группа запчастей'|trans}} ({{ oContainer.getActiveGroup.getRuname|trans({}, 'toyota') }})</a>/
    <a href="{{ path('catalog_toyota_subgroups', parameters) }}">{{'Подгруппа запчастей'|trans}} ({{ oContainer.getActiveGroup.getSubGroup(parameters.subGroupCode).getOption('locale_name')|trans({}, 'toyota', loc) }})</a> / {{ 'Схема'|trans }}
{% endblock breadcrumbs %}

{% block subGroupRuname %}
    {% set loc = app.request.get('_locale')~'_'~app.request.get('_locale')|upper %}
    {{ oContainer.getActiveGroup.getSubGroup(parameters.subGroupCode).getOption('locale_name')|trans({}, 'toyota', loc) }}
{% endblock subGroupRuname %}
{% block groupRuname %}{{ oContainer.getActiveGroup.getRuname|trans({}, 'toyota') }}{% endblock groupRuname %}



{% block schema %}
    {% if schema.getCode is not empty %}
        <div style=" height: 500px; " class="col-sm-4 col-sm-offset-5 col-md-4 col-md-offset-0">
        <a href="{{ path('catalog_toyota_schema', parameters|merge({'schemaCode': schema.getCode})) }}">



                    <div class="row">
                         {{ schema.getOption('desc')}}
                    </div>



                    <div class="row">
                        <img src="{{ asset(constant('Catalog\\CommonBundle\\Components\\Constants::PREFIX_STATIC')~'/bundles/catalogtoyota/Img/'~oContainer.getActiveRegion.getCode~'/'~schema.getOption('disk')~'/'~schema.getCode~'.png') }}" width="300" alt="{{ schema.getCode }}"/>
                    </div>


        </a>
            </div>
    {% endif %}

{% endblock schema %}