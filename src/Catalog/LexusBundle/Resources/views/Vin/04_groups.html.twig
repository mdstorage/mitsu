{% trans_default_domain 'common' %}
{% extends 'CatalogCommonBundle:Catalog:04_groups.html.twig' %}
{% use 'CatalogLexusBundle::lexus.base.html.twig' %}
{% block breadcrumbs %}
   <a href="{{ path('vin_lexus',parameters) }}">{{'Поиск по номеру кузова'|trans}} ({{ oContainer.getActiveRegion.getRuname }},
   {{ oContainer.getActiveModel.getRuname }}, {{ oContainer.getActiveModification.getRuname }})</a>
    / {{'Группа запчастей'|trans}}
{% endblock breadcrumbs %}



{% block body %}
    {% block head %}<h3>{{ 'Выбрать группу запчастей'|trans }}:</h3>{% endblock head %}
    <div class="row">
    <div class="col-lg-12">
        {% block groups %}
            <div class="groups">
                {% for group in oContainer.getGroups %}



                    <a href="{{ path('vin_lexus_subgroups', parameters|merge({'groupCode': group.getCode})) }}">
                        <div class="row">

                            ({{ group.getCode }}) {{ group.getRuname|trans({}, 'lexus') }}

                        </div>


                    </a>


                {% endfor %}
            </div>
        {% endblock groups %}
    </div>
    </div>
{% endblock body %}