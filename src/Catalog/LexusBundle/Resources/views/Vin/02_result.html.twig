{% trans_default_domain 'common' %}
{% extends 'CatalogCommonBundle:Vin:02_result.html.twig' %}
{% block specification %}
    <div class="row">
        <div class="col-lg-8">
            <table class="table table-bordered">

                <tr>
                    <td>{{'Марка'|trans}}:</td>
                    <td>{{ result.marka }}</td>
                </tr>

                <tr>
                    <td>{{'Регион'|trans}}:</td>
                    <td>{{ result.region }}</td>
                </tr>

                <tr>
                    <td>{{'Модель'|trans}}:</td>
                    <td>{{ result.modelf }}</td>
                </tr>

                <tr>
                    <td>{{'Модификация'|trans}}:</td>
                    <td>{{ result.modif }}</td>
                </tr>

                <tr>
                    <td>{{'Комплектация'|trans}}:</td>
                    <td>{% for compl in result.complectation %}
                        {% if compl %}
                        {{ compl }}<br>
                            {% endif %}
                        {% endfor %}
                    </td>
                </tr>

                <tr>
                    <td>{{'Дата выпуска'|trans}}:</td>
                    <td>{{ result[constant('Catalog\\CommonBundle\\Components\\Constants::PROD_DATE')]|lexus_date_convertor }}</td>
                </tr>

                <tr>
                    <td>{{'Цвет салона'|trans({}, 'lexus')}}:</td>
                    <td>{{ result.cvet_salona }}</td>
                </tr>

                <tr>
                    <td>{{'Цвет кузова'|trans({}, 'lexus')}}:</td>
                    <td>{{ result.cvet_kuzova }}</td>
                </tr>


            </table>
        </div>
    </div>
{% endblock specification %}
{% block catalogPath %}
    {{ path('vin_lexus_groups',({'regionCode': result.region, 'modelCode': result.model, 'modificationCode': result.kod_modifikacii, 'complectationCode': result.kod_complektacii, 'token': app.request.get('token') })) }}
{% endblock catalogPath %}