<div class="modifications">
<div class="row">
    {% for modification in oContainer.getActiveModel.getModifications %}
         <div>
            {% block modification %}
             <div class="row">
                <a href="{{ path('catalog_lexus_complectations', parameters|merge({'modificationCode': modification.getCode})) }}">
                   {{ modification.getOption('models_codes') }}
                    ({{ modification.getOption(constant('Catalog\\CommonBundle\\Components\\Constants::START_DATE'))|lexus_date_convertor }} -
                    {{ modification.getOption(constant('Catalog\\CommonBundle\\Components\\Constants::END_DATE'))|lexus_date_convertor }})
                </a>
             </div>
            {% endblock modification %}
        </div>
    {% endfor %}
</div>
</div>
