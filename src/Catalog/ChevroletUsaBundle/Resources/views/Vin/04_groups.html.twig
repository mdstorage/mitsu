{% extends 'CatalogCommonBundle:Catalog:04_groups.html.twig' %}
{% use 'CatalogChevroletUsaBundle::chevroletusa.base.html.twig' %}
{% block breadcrumbs %}
   <a href="{{ path('vin_chevroletusa') }}">Поиск по номеру кузова ({{ oContainer.getActiveRegion.getRuname }}, 
   {{ oContainer.getActiveModel.getRuname }}, {{ oContainer.getActiveModification.getRuname }})</a>
    / Группа запчастей
{% endblock breadcrumbs %}


{% block complectation %}
{% endblock complectation %}


{% block body %}
    {% block head %}<h3>Выбрать группу запчастей:</h3>{% endblock head %}
    <div class="row">
        <div class="col-lg-12">
            {% block groups %}
                <div class="groups">
                    {% for group in oContainer.getGroups %}

                        <div class="col-sm-10 col-sm-offset-5 col-md-10 col-md-offset-0">

                            <a href="{{ path('vin_chevroletusa_subgroups', parameters|merge({'groupCode': group.getCode})) }}">
                                <div class="row">

                                    ({{ group.getCode }}) {{ group.getRuname }}

                                </div>

                            </a>

                        </div>
                    {% endfor %}
                </div>
            {% endblock groups %}
        </div>
    </div>
{% endblock body %}