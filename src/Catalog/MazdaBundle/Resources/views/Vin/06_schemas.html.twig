{% extends 'CatalogCommonBundle:Catalog:06_schemas.html.twig' %}
{% use 'CatalogMazdaBundle::mazda.base.html.twig' %}
{% block breadcrumbs %}
    <a href="{{ path('vin_mazda',parameters) }}">Поиск по номеру кузова</a> / <a href="{{ path('vin_mazda_groups', parameters) }}">Выбрать группу запчастей</a> / <a href="{{ path('vin_mazda_subgroups', parameters) }}">Выбрать подгруппу запчастей</a> / Выбрать схему
{% endblock breadcrumbs %}

{% block complectation %}{% endblock complectation %}

{% block schema %}
    {% if schema.getCode is not empty %}
            <div class="col-xs-3">
        <a href="{{ path('vin_mazda_schema', parameters|merge({'schemaCode': schema.getCode})) }}">

                    <div class="row">
                        {{ schema.getRuname }}
                    </div>
                    <div class="row">
                        <img src="{{ asset(constant('Catalog\\CommonBundle\\Components\\Constants::PREFIX_STATIC')~'/bundles/catalogmazda/images/'~schema.getOption(constant('Catalog\\CommonBundle\\Components\\Constants::CD'))~'/image/'~schema.getCode|slice(0,3)~'/'~schema.getCode~'.png') }}" width="300" alt="{{ schema.getRuname }}"/>
                    </div>

        </a>
            </div>
    {% endif %}
{% endblock schema %}