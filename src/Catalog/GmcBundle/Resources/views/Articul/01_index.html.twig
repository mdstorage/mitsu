{% extends 'CatalogCommonBundle:Articul:01_index.html.twig' %}
{% use 'CatalogGmcBundle::gmc.base.html.twig' %}
{% block formAction %}
    {% if app.request.get('token') %}
        {{ path('articul_gmc_find_token', {'token': app.request.get('token'), 'articul': app.request.get('articul')|trim, 'callbackhost': app.request.get('callbackhost')}) }}

    {% else %}

        {{ path('articul_gmc_find', {'articul': app.request.get('articul')|trim, 'callbackhost': app.request.get('callbackhost')}) }}

    {% endif %}
{% endblock formAction %}

{% block articulScript %}
    <script>
        $("#articul-button").on('click', function(){
            if($("#articul").val(). replace(/\s+/g, '').length < 7){
                alert("Артикул должен содержать не менее 7 знаков!");
                return;
            }
        });
    </script>
{% endblock articulScript %}