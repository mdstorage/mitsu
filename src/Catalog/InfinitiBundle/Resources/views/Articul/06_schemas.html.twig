{% extends 'CatalogCommonBundle:Catalog:06_schemas.html.twig' %}
{% use 'CatalogInfinitiBundle::infiniti.base.html.twig' %}
{% block breadcrumbs %}
    <a href="{% if  app.request.get('token') %} {{ path('articul_infiniti_find_token', parameters) }} {% else %} {{ path('articul_infiniti_find') }} {% endif %}">Выбрать регион, модель, модификацию</a> / <a href="{{ path('articul_infiniti_groups', parameters) }}">Выбрать группу запчастей</a> / <a href="{{ path('articul_infiniti_subgroups', parameters) }}">Выбрать подгруппу запчастей</a> / Выбрать схему
{% endblock breadcrumbs %}

{% block subGroupRuname %}{{ oContainer.getActiveGroup.getSubGroup(parameters['subGroupCode']).getRuname }}{% endblock subGroupRuname %}


{% set a = 'SECIMG' %}
{% if oContainer.getActiveRegion.getCode != "JP"  %}
    {% set a = 'SECIMG' %}
{% endif %}

{% block schema %}
    {% if schema.getCode is not empty %}
        <div style=" height: 300px; " class="col-sm-4 col-sm-offset-5 col-md-4 col-md-offset-0">
            <a href="{{ path('articul_infiniti_schema', parameters|merge({'schemaCode': schema.getCode})) }}">


                <div class="row">
                    {{ schema.getOption('FROMDATE')|infiniti_date_convertor }} - {{ schema.getOption('UPTODATE')|infiniti_date_convertor }}
                </div>

                <div class="row">
                    {{ schema.getRuname }}
                </div>



                <div class="row">
                    <img src="{{ asset('bundles/cataloginfiniti/Img/'~oContainer.getActiveRegion.getCode~'/'~oContainer.getActiveComplectation.getCode|slice(0,3)~'/'~a~'/'~schema.getCode|slice(0,6)~'.gif') }}" width="300" alt="{{ schema.getRuname }}"/>
                </div>


            </a>
        </div>
    {% endif %}
{% endblock schema %}