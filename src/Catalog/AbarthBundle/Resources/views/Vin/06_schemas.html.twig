{% extends 'CatalogCommonBundle:Catalog:06_schemas.html.twig' %}
{% use 'CatalogAbarthBundle::abarth.base.html.twig' %}
{% block breadcrumbs %}
    <a href="{{ path('vin_abarth') }}">Поиск по номеру кузова</a> /
    <a href="{{ path('vin_abarth_groups', parameters) }}">Группа запчастей ({{ oContainer.getActiveGroup.getRuname}})</a>/
    <a href="{{ path('vin_abarth_subgroups', parameters) }}">Подгруппа запчастей ({{ oContainer.getActiveGroup.getSubGroup(parameters.subGroupCode).getRuname }})</a> / Выбрать схему
{% endblock breadcrumbs %}


{% block complectation %}
{% endblock complectation %}

{% block subGroupRuname %}{{ oContainer.getActiveGroup.getSubGroup(parameters['subGroupCode']).getRuname }}{% endblock subGroupRuname %}

{% block schema %}
    {% if schema.getCode is not empty %}
        <div style=" height: 300px; " class="col-sm-4 col-sm-offset-5 col-md-4 col-md-offset-0">
            <a href="{{ path('vin_abarth_schema', parameters|merge({'schemaCode': schema.getCode})) }}">

                <div class="row">
                    {{ schema.getRuname }}
                </div>

                <div class="row">
                    {{ schema.getOption('pattern')|replace({',':', '}) }}
                </div>

                <div class="row">
                    <img src="{{ asset('bundles/catalogfiat/Imgs/images/'~schema.getOption('catalog')~'/'~schema.getOption('picture')|replace({'png':'th.png'})) }}" width="200" alt="{{ schema.getRuname }}"/>
                </div>


            </a>
        </div>
    {% endif %}
{% endblock schema %}