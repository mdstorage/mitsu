{% extends 'CatalogCommonBundle:Catalog:04_groups.html.twig' %}
{% use 'CatalogSuzukiBundle::suzuki.base.html.twig' %}
{% block breadcrumbs %}
    <a href="{{ path('vin_suzuki',parameters) }}">Поиск по номеру кузова</a> / Выбрать группу запчастей
{% endblock breadcrumbs %}

{% block body %}
    {% block head %}<h3>Выбрать группу запчастей:</h3>{% endblock head %}
    <div class="row">
    <div class="col-lg-12">
        {% block groups %}
            <div class="groups">
                {% for group in oContainer.getGroups %}
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                          
                        <a href="{{ path('vin_suzuki_subgroups', parameters|merge({'groupCode': group.getCode})) }}">
                        
                        <div class="row">
                        ({{ group.getCode }}) {{ group.getRuname }}
                    </div>
                    <div class="row">
                        <img src="{{ asset(constant('Catalog\\CommonBundle\\Components\\Constants::PREFIX_STATIC')~'/bundles/catalogsuzuki/images/GROUP_IMAGE/IMAGE'~(group.getCode-1)~'.psd') }}" alt="{{ group.getRuname }}"/>
                    </div>
                        </a>
                   
                    </div> 
                {% endfor %}
            </div>
        {% endblock groups %}
    </div>
    </div>
{% endblock body %}