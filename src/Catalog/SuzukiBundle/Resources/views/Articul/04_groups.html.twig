{% extends 'CatalogCommonBundle:Catalog:04_groups.html.twig' %}
{% use 'CatalogSuzukiBundle::suzuki.base.html.twig' %}
{% block breadcrumbs %}
    <a href="{{ path('articul_suzuki_find') }}">Регион, модель, модификация ({{ oContainer.getActiveRegion.getRuname }}, 
   {{ oContainer.getActiveModel.getRuname }}, {{ oContainer.getActiveModification.getRuname }})</a> /<a href="{{ path('articul_suzuki_complectations', parameters) }}">Комплектация ({{ oContainer.getActiveComplectation.getRuname}})</a> / Группа запчастей
{% endblock breadcrumbs %}

{% block complectation %}{% endblock complectation %}
{% block body %}
    {% block head %}<h3>Выбрать группу запчастей:</h3>{% endblock head %}
    
     
    <div class="row">
    <div class="col-lg-12">
    {% block groups %} 
            <div class="groups">
                {% for group in oContainer.getGroups %}
                    <div class = "col-lg-3">
                                          
                        <a href="{{ path('articul_suzuki_subgroups', parameters|merge({'groupCode': group.getCode})) }}">
                        
                        <div class="row">
                        ({{ group.getCode }}) {{ group.getRuname }}
                    </div>
                    <div class="row">
                        <img src="{{ asset('bundles/catalogsuzuki/images/GROUP_IMAGE/IMAGE'~(group.getCode-1)~'.psd') }}" alt="{{ group.getRuname }}"/>
                    </div>
                        </a>
                   
                    </div> 
                {% endfor %}
            </div>
    {% endblock groups %}    
    </div>
    </div>
    
{% endblock body %}