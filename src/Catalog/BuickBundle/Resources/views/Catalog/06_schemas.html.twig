{% extends 'CatalogCommonBundle:Catalog:06_schemas.html.twig' %}
{% use 'CatalogBuickBundle::buick.base.html.twig' %}
{% block breadcrumbs %}
    <a href="{% if  app.request.get('token') %} {{ path('catalog_buick_token', parameters) }} {% else %} {{ path('catalog_buick') }} {% endif %}">Регион, модель, модификация ({{ oContainer.getActiveRegion.getRuname }},
        {{ oContainer.getActiveModel.getRuname }}, {{ oContainer.getActiveModification.getRuname }})</a> /
    <a href="{{ path('catalog_buick_complectations', parameters) }}"> Комплектация ({{ oContainer.getActiveComplectation.getRuname }})</a>/
    <a href="{{ path('catalog_buick_groups', parameters) }}">Группа запчастей ({{ oContainer.getActiveGroup.getRuname}})</a>/ Выбрать схему
{% endblock breadcrumbs %}

{% block subGroupRuname %}{{ oContainer.getActiveGroup.getSubGroup(parameters['subGroupCode']).getRuname }}{% endblock subGroupRuname %}

{% block subGroup %}
{% endblock subGroup %}

{% block schema %}
    {% if schema.getCode is not empty %}
        <div style=" height: 300px; " class="col-sm-4 col-sm-offset-5 col-md-4 col-md-offset-0">
        <a href="{{ path('catalog_buick_schema', parameters|merge({'schemaCode': schema.getCode})) }}">

                    <div class="row">
                        ({{ schema.getCode }}) {{ schema.getRuname }}
                    </div>


                    <div class="row">
                        <img src="{{ asset('bundles/cataloggm/Images/G/'~schema.getOption('IMAGE_NAME')~'.gif') }}" width="200" alt="{{ schema.getRuname }}"/>
                    </div>


        </a>
            </div>
    {% endif %}
{% endblock schema %}