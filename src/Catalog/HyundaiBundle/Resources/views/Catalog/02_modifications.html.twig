<div class="modifications">
<div class="row">
    {% for modification in oContainer.getActiveModel.getModifications %}
         <div>
            {% block modification %}

                <a href="{{ path('catalog_hyundai_complectations', parameters|merge({'modificationCode': modification.getCode})) }}">
                <img src="{{ asset('bundles/cataloghyundai/Images/titles/'~modification.getOption('option1')~'.png') }}" alt="{{ modification.getCode }}">

                    {{ modification.getRuname }}
                </a>

            {% endblock modification %}
        </div>
    {% endfor %}
</div>
</div>
