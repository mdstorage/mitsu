            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{% block catalogPathLogo %}{% endblock catalogPathLogo %}">{{ trans('Каталог', app.request.get('_locale')) }} <span id="span1">{{ block('brand') }}</span></a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="{{ 'catalog' in app.request.getPathInfo ? 'active'}}"><a href="{% block catalogPath %}{% endblock catalogPath %}">{% block catalogMenuItem %}{{ trans('Каталог', app.request.get('_locale')) }}{% endblock catalogMenuItem %}</a></li>
                    <li class="{{ 'vin' in app.request.getPathInfo ? 'active'}}"><a href="{% block vinPath %}{% endblock vinPath %}">{% block vinMenuItem %}{{ trans('Поиск по VIN', app.request.get('_locale')) }}{% endblock vinMenuItem %}</a></li>
                    <li class="{{ 'articul' in app.request.getPathInfo ? 'active'}}"><a href="{% block articulPath %}{% endblock articulPath %}">{% block articulMenuItem %}{{ trans('Поиск запчасти по артикулу', app.request.get('_locale')) }}{% endblock articulMenuItem %}</a></li>
                </ul>

                {% set langes = ['en', 'ru'] %}

                {#<input type="button" name = "button_res" id = "id_ru" class="btn btn-primary btn-xs" value = "ru"
                       style = "float:right;">#}

                {% for  lang in langes %}
                <a type="button" name = "button_res" id = "id_{{ lang }}" class="btn btn-default btn-xs"

                   href="{% if parameters is defined %}{{ path(app.request.get('_route'), parameters|merge({'_locale': lang})) }}{% else %} {{ path(app.request.get('_route'), {'_locale': lang}) }} {% endif %}"

                   style = "float:right;">{{ lang }}</a>

                    <script>

                        $('#id_{{ lang }}').each(function(){
                            {
                                var tr = '{{ app.request.get('_locale') }}';
                                if (tr == '') { tr = 'ru' };
                                ($(this).text() == tr) ? $(this).addClass('btn-primary'): $(this).removeClass('btn-primary');


                            }
                        });

                        $("#id_{{ lang }}").on('click', function(){
                        $('a[name="button_res"]').removeClass('btn-primary');
                            $(this).addClass('btn-primary');
                    });
                    </script>

                {% endfor %}

            </div><!-- /.navbar-collapse -->

        </div><!-- /.container-fluid -->
    </nav>


    <div class="container-fluid">
        {% block breadcrumbs_set %}
            <div class="breadcrumb">
                {% block breadcrumbs %}
                {% endblock breadcrumbs %}
            </div>
        {% endblock breadcrumbs_set %}
        {% block summary_set%}
