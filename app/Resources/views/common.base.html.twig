                            <div class="jivo-btn jivo-offline-btn jivo-btn-dark jivo-btn-gradient" onclick="jivo_api.open();" style="font-family: Helvetica, Arial;font-size: 15px;background-color: #FFEB3B;border-radius: 3px;-moz-border-radius: 3px;-webkit-border-radius: 3px;height: 30px;line-height: 30px;padding: 0 15px 0 15px;display: none;font-weight: normal;font-style: normal">{{ trans('Сообщить об ошибке', app.request.get('_locale')) }}</div>

